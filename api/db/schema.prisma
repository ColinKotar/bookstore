datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id                  Int       @id @default(autoincrement())
  email               String    @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  books               Book[]
}

model Book {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  User        User?  @relation(fields: [userId], references: [id])
  userId      Int?
}
